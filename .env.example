# Configuration du serveur
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Base de données
DB_PATH=./server/database/jacques_ia.db

# Sécurité
JWT_SECRET=votre-cle-secrete-jwt-tres-longue-et-complexe
JWT_EXPIRES_IN=7d

# APIs d'IA (optionnelles - configurez au moins une)
OPENAI_API_KEY=votre-cle-openai
ANTHROPIC_API_KEY=votre-cle-anthropic

# Configuration Docker (pour l'exécution de code)
DOCKER_HOST=unix:///var/run/docker.sock

# Limites de rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=20
CODE_EXECUTION_RATE_LIMIT_MAX_REQUESTS=10

# Configuration de sécurité
BCRYPT_SALT_ROUNDS=12
SESSION_TIMEOUT_MS=1800000

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=./logs/jacques-ia.log

# Configuration CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configuration WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=300000

# Configuration Google OAuth
GOOGLE_CLIENT_ID=votre-google-client-id
GOOGLE_CLIENT_SECRET=votre-google-client-secret
REACT_APP_GOOGLE_CLIENT_ID=votre-google-client-id